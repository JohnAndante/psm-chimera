    {
      "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": false,
        "types": [
          "node"
        ]
      },
      "include": [
        "src/**/*.ts",
        "*.ts"
      ],
      "exclude": [
        "node_modules"
      ]
    }
